FROM node:18-alpine

WORKDIR /app

# Install git and MCP git server
RUN apk add --no-cache git
RUN npm install -g @modelcontextprotocol/server-git

# Create non-root user
RUN addgroup -g 1001 -S mcp
RUN adduser -S mcp -u 1001
USER mcp

# Expose port
EXPOSE 3002

# Start git MCP server
CMD ["mcp-server-git", "--port", "3002", "--repository", "/workspace"]